<?xml version="1.0" encoding="utf-8"?>
<!--
     Configures the Android search box appearance
     and the search suggestions settings.
-->
<searchable xmlns:android="http://schemas.android.com/apk/res/android"
    android:hint="@string/searchhint"
    android:includeInGlobalSearch="true"
    android:label="@string/searchword"
    android:searchSuggestAuthority="com.sabdakosh.DictionaryProvider"
    android:searchSuggestIntentAction="android.intent.action.VIEW"
    android:searchSuggestIntentData="content://com.sabdakosh.DictionaryProvider/dictionary"
    android:searchSuggestSelection=" ?"
    android:searchSuggestThreshold="1" >

</searchable>